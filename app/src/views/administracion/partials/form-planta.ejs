<h2><%= accion === 'agregar' ? 'Agregar nueva planta' : 'Modificar planta' %></h2>
<form id="form-planta" action="<%= accion === 'agregar' ? '/administracion/plantas' : '/administracion/plantas/' + planta.id + '/actualizar' %>" 
      method="POST" enctype="multipart/form-data">
    <label>
        Nombre común:
        <input type="text" name="nombre" value="<%= planta ? planta.nombre : '' %>" 
               required placeholder="Ej: Albahaca">
    </label>
    <label>
        Nombre científico:
        <input type="text" name="nombre_cientifico" value="<%= planta ? planta.nombre_cientifico : '' %>" 
               placeholder="Ej: Ocimum basilicum">
    </label>
    <label>
        Descripción:
        <textarea name="descripcion" required><%= planta ? planta.descripcion : '' %></textarea>
    </label>
    <label>
        Propiedades medicinales:
        <textarea name="propiedades"><%= planta ? planta.propiedades : '' %></textarea>
    </label>
    <label>
        Zona geográfica:
        <input type="text" name="zona_geografica" value="<%= planta ? planta.zona_geografica : '' %>" 
               placeholder="Ej: Región tropical">
    </label>
    <label>
        Usos (Aplicaciones terapéuticas):
        <textarea name="usos"><%= planta ? planta.usos : '' %></textarea>
    </label>

    <h3 style="margin-top: 20px; color: #2c5e2e; border-bottom: 2px solid #eee; padding-bottom: 5px;">Detalles Farmacológicos</h3>
    
    <label>
        Principio Activo:
        <input type="text" name="principio_activo" value="<%= planta ? planta.principio_activo : '' %>" 
               placeholder="Ej: Mentol, Eucaliptol">
    </label>
    <label>
        Parte de la planta utilizada:
        <input type="text" name="parte_utilizada" value="<%= planta ? planta.parte_utilizada : '' %>" 
               placeholder="Ej: Hojas, Raíz, Flores">
    </label>
    <label>
        Dosis recomendada:
        <textarea name="dosis" placeholder="Ej: 2 tazas al día..."><%= planta ? planta.dosis : '' %></textarea>
    </label>
    <label>
        Formas farmacéuticas:
        <input type="text" name="formas_farmaceuticas" value="<%= planta ? planta.formas_farmaceuticas : '' %>" 
               placeholder="Ej: Infusión, Extracto, Cápsulas">
    </label>
    
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
        <label>
            Contraindicaciones:
            <textarea name="contraindicaciones" style="background: #fff5f5;"><%= planta ? planta.contraindicaciones : '' %></textarea>
        </label>
        <label>
            Efectos secundarios:
            <textarea name="efectos_secundarios" style="background: #fff5f5;"><%= planta ? planta.efectos_secundarios : '' %></textarea>
        </label>
    </div>
    <label>
        Imagen:
        <input type="file" name="imagen" accept="image/*">
        <% if (planta && planta.imagen) { %>
            <small>Imagen actual: <%= planta.imagen %></small>
        <% } %>
    </label>
    <div style="display: flex; gap: 12px; margin-top: 24px; justify-content: center;">
        <button type="submit">
            <i class="fas fa-save"></i> <%= accion === 'agregar' ? 'Crear' : 'Actualizar' %>
        </button>
        <button type="button" onclick="document.getElementById('modal-editar-planta').style.display='none'">
            <i class="fas fa-times"></i> Cancelar
        </button>
    </div>
</form>

